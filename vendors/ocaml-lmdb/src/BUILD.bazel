load("@obazl_rules_ocaml//ocaml:rules.bzl",
     "ocaml_module",
     "ocaml_ns_library",
     "ocaml_signature")

cc_library(
    name = "lmdb_c",
    srcs = [
        "lmdb.h",
        "lmdb_stubs.c",
        "mdb.c",
        "midl.h",
        "midl.c",
    ],
    deps = [
        "@ocaml//csdk"
    ],
)

ocaml_signature(
    name = "lmdb__sig",
    src = "lmdb.mli",
    deps = ["@ocaml//lib/rresult"],
)

ocaml_module(
    name = "lmdb",
    opts = ["-linkall"],
    deps = ["@ocaml//lib/rresult"],
    cc_deps = { "lmdb_c": "default" },
    sig = "lmdb__sig",
    struct = "lmdb.ml",
    visibility = ["//visibility:public"],
)

