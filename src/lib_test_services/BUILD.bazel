load("@obazl_rules_ocaml//ocaml:rules.bzl", "ocaml_module", "ocaml_ns_library")

ocaml_module(
    name = "test_services",
    deps_opam = ["alcotest-lwt"],
    opts = [
        "-linkall",
        "-open",
        "Tezos_base__TzPervasives",
    ],
    struct = ":test_services.ml",
    deps = [
        ":test_services_base",
        "@tezos//src/lib_base:#Tezos_base",
        "@tezos//src/lib_stdlib_unix:#Tezos_stdlib_unix",
    ],
)

ocaml_module(
    name = "test_services_base",
    deps_opam = ["alcotest-lwt"],
    opts = [
        "-linkall",
        "-open",
        "Tezos_base__TzPervasives",
    ],
    struct = ":test_services_base.ml",
    deps = [
        "@tezos//src/lib_base:#Tezos_base",
        "@tezos//src/lib_stdlib_unix:#Tezos_stdlib_unix",
    ],
)

# okapi:auto
ocaml_ns_library(
    name = "#Tezos_test_services",
    submodules = [
        ":test_services",
        ":test_services_base",
    ],
    visibility = ["//visibility:public"],
)
